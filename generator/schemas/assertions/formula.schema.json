{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema for formula",
  "type": "object",
  "additionalProperties": false,
	"properties": {
		"operation": {
			"type": "object",
			"oneOf": [
				{"$ref": "assertions/formula/operation/equals.schema.json"}
			]
		},
		"constant": {
			"type": ["number", "boolean"]
		},
		"variable": {
			"type": "string"
		}
	},
  "oneOf": [
    { "required": ["operation"] },
    { "required": ["constant"] },
    { "required": ["variable"] }
  ]
}

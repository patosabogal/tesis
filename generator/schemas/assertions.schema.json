{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Schema for assertions",
  "patternProperties": {
    "^[a-zA-Z]+(?:[A-Z][a-z]*)*$": {
      "type": "object",
      "properties": {
        "preconditions": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "assertions/formula.schema.json"
          }
        },
        "postconditions": {
          "type": "array",
          "items": {
            "type": "object",
            "$ref": "assertions/formula.schema.json"
          }
        }
      }
    }
  }
}
